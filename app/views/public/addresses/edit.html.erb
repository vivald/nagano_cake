<div class="container">
  <div class="row">
    <div class="col-xs-9">
      <h2>配送先編集</h2>
      <%= form_with model:@address, url: public_address_path(@address), local:true do |f| %>
	      <table class="table">
					<thead>
					</thead>
					<tbody>
						<tr>
							<td>郵便番号（ハイフンなし）</td>
							<td><%= f.text_field :postal_code %></td>
							<td></td>
						</tr>
						<tr>
							<td>住所</td>
							<td><%= f.text_field :address %></td>
							<td></td>
						</tr>
						<tr>
							<td>宛名</td>
							<td><%= f.text_field :name %></td>
							<td><%= f.submit "変更を保存" %></td>
						</tr>
					</tbody>
				</table>
			<% end %>
    </div>
  </div>
</div>