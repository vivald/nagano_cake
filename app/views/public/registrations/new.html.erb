<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>新規会員登録</h2>
      <br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table class="table">
        	<tbody>
        		<tr>
        			<td>名前</td>
        			<td>(姓)</td>
        			<td><%= f.text_field :last_name, autofocus: true %></td>
        			<td>(名)</td>
        			<td><%= f.text_field :last_name %></td>
        		</tr>
        		<tr>
        			<td>フリガナ</td>
        			<td>(セイ)</td>
        			<td><%= f.text_field :last_name %></td>
        			<td>(メイ)</td>
        			<td><%= f.text_field :last_name %></td>
        		</tr>
        		<tr>
        			<td>メールアドレス</td>
        			<td></td>
        			<td><%= f.email_field :email, class: "new_inform" %></td>
        			<td></td>
        			<td></td>
        		</tr>
        		<tr>
        			<td>郵便番号（ハイフンなし）</td>
        			<td></td>
        			<td><%= f.text_field :postal_code %></td>
        			<td></td>
        			<td></td>
        		</tr>
        		<tr>
        			<td>住所</td>
        			<td></td>
        			<td><%= f.text_field :address %></td>
        			<td></td>
        			<td></td>
        		</tr>
        		<tr>
        			<td>電話番号（ハイフンなし）</td>
        			<td></td>
        			<td><%= f.text_field :telephone_number %></td>
        			<td></td>
        			<td></td>
        		</tr>
        		<tr>
        			<td>パスワード（６文字以上）</td>
        			<td></td>
        			<td><%= f.password_field :password, autocomplete: "new-password" %></td>
        			<td></td>
        			<td></td>
        		</tr>
        		<tr>
        			<td>パスワード（確認用）</td>
        			<td></td>
        			<td><%= f.password_field :password_confirmation %></td>
        			<td></td>
        			<td></td>
        		</tr>
        		<tr>
        		  <td></td>
        		  <td></td>
        		  <td><%= f.submit "新規登録" %></td>
        		  <td></td>
        		  <td></td>
        		</tr>
        	</tbody>
        </table>
      <% end %>
      <br>
      <h3>既に登録済みの方</h3>
      <p>
        <%= link_to "こちら", new_customer_session_path %>
        <!--%= render "public/shared/links" %-->
        からログインしてください。
      </p>
    </div>
  </div>
</div>