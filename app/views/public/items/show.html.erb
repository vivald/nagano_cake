<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= attachment_image_tag @item, :image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'150x150' %></td><br>
      <%= @item.name %>
      <%= @item.introduction %>
      ¥<%= @item.price %>（税込）
      <div class="form-group">
        <%= form_with model:@cart_items, url: {controller: 'cart_items', action: 'create' }, local:true do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.hidden_field :customer_id, value: @customer.id %>
          <%= f.number_field :amount %>
          <%= f.submit "カートに入れる" %>
        <% end %>
      </div>
    </div>
  </div>
</div>