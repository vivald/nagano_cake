<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= attachment_image_tag @item, :image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'150x150' %></td><br>
      <%= @item.name %>
      <%= @item.introduction %>
      ¥<%= @item.price %>（税込）
      <div class="form-group">
        <%= form_with model:@cartItem, url: public_cart_items_path(current_customer.id), local:true do |f| %>
          <%= f.number_field :amount %>
          <!--%= f.select :amount, @cartItem.all.map { |cart_item| [cart_item.amount] },  { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>-->
          <%= f.submit "カートに入れる" %>
        <% end %>
      </div>
    </div>
  </div>
</div>