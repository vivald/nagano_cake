<style>
.edit-btn{
  display       : inline-block;
  border-radius : 5%;
  font-size     : 12pt;
  text-align    : center;
  cursor        : pointer;
  padding       : 12px 12px;
  background    : #00b300;
  color         : #ffffff;
  line-height   : 1em;
  transition    : .3s;
  border        : 2px solid #00b300;
}

.leave-btn{
   display       : inline-block;
  border-radius : 5%;
  font-size     : 11pt;
  text-align    : center;
  cursor        : pointer;
  padding       : 12px 12px;
  background    : #ff0000;
  color         : #ffffff;
  line-height   : 1em;
  transition    : .3s;
  border        : 2px solid #ff0000;
}
</style>

<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10">
      <h2>会員情報編集</h2>
      <br>
      <%= form_with model: @customer, url: public_customers_path, local: true do |f| %>
        <table class="table">
        	<tbody>
        		<tr>
        			<td>名前</td>
        			<td>(姓)</td>
        			<td><%= f.text_field :last_name, autofocus: true, class: "new_inform" %></td>
        			<td>(名)</td>
        			<td><%= f.text_field :first_name, class: "new_inform" %></td>
        		</tr>
        		<tr>
        			<td>フリガナ</td>
        			<td>(セイ)</td>
        			<td><%= f.text_field :last_name_kana, class: "new_inform" %></td>
        			<td>(メイ)</td>
        			<td><%= f.text_field :first_name_kana, class: "new_inform" %></td>
        		</tr>
        		<tr>
        			<td>郵便番号（ハイフンなし）</td>
        			<td></td>
        			<td><%= f.text_field :postal_code, class: "new_inform" %></td>
        			<td></td>
        			<td></td>
        		</tr>
        			<td>住所</td>
        			<td></td>
        			<td><%= f.text_field :address, class: "new_inform" %></td>
        			<td></td>
        			<td></td>
        		</tr>
        		<tr>
        			<td>電話番号（ハイフンなし）</td>
        			<td></td>
        			<td><%= f.text_field :telephone_number, class: "new_inform" %></td>
        			<td></td>
        			<td></td>
        		</tr>
        		<tr>
        			<td>メールアドレス</td>
        			<td></td>
        			<td><%= f.email_field :email, class: "new_inform" %></td>
        			<td></td>
        			<td></td>
        		</tr>
        		<tr>
        		  <td></td>
        		  <td></td>
        		  <td><%= f.submit "編集内容を保存", class: "edit-btn" %></td>
        		  <td><%= link_to "退会する", public_customers_confirm_path, {class: "leave-btn"}%></td>
        		  <td><td>
        		</tr>
        	</tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>