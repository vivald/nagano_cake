<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>注文情報確認</h2>
      <table class="table table-bordered">
      	<thead class = "active">
      		<tr>
      			<th>商品名</th>
      			<th>単価（税込）</th>
      			<th>数量</th>
      			<th>小計</th>
      			<th></th>
      		</tr>
      	</thead>
        <% @cart_items.each do |cart_item| %>
        	<tbody>
        		<tr>
        		  <td><%= attachment_image_tag cart_item.item, :image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %></td>
        			<td><%= cart_item.item.name %></td>
        			<td><%= (cart_item.item.price * @add_tax).floor %></td>
        			<td><%= cart_item.amount %></td>
        			<td><%= cart_item.item.price * cart_item.amount %></td>
        		</tr>
        	</tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>