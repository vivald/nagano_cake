<div class="container">
  <div class="row">
    <div class="co-xs-12">
      <h2>注文履歴一覧</h2>
      <table class="table table-bordered">
				<thead>
					<tr class ="active">
						<th>注文日</th>
						<th>注文の配送先</th>
						<th>注文商品</th>
						<th>支払い金額</th>
						<th>注文詳細</th>
					</tr>
				</thead>
				<tbody>
				  <% @orders.each do |order| %>
						<tr>
						  <td><%= l order.created_at %></td>
						  <td>
						  	<%= "〒" + order.postal_code %><br>
						  	<%= order.address %><br>
						  	<%= order.name %>
						  </td>
						  <td>
							  <% order.order_details.each do |order_detail| %>
									<%= order_detail.item.name %><br>
								<% end %>
							</td>
							<td><%= (order.total_payment).to_s(:delimited, delimiter: ',') + "円" %></td>
							<td><%= link_to "表示する", public_order_path(order) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
    </div>
  </div>
</div>