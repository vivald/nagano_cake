<!DOCTYPE html>
<html>
  <head>
    <title>DwcWebAppDev2AssignmentBookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container container-fluid">
        <div class="navbar-left">
    		  Logo
    		</div>
        <% if admin_signed_in? %>
    			<div class ="navbar-text navbar-right">
    			  <%= link_to(user_path(@user),  {class: "navbar-link"}) do %>
    			    <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home
    			  <% end %>
    			  <%= link_to(users_path,  {class: "navbar-link"}) do %>
    			    <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users
    			  <% end %>
    			  <%= link_to(books_path,  {class: "navbar-link"}) do %>
    			    <span class="glyphicon glyphicon-book" aria-hidden="true"></span> Books
    			  <% end %>
    			  <%= link_to(destroy_user_session_path,  {method: :delete, class: "navbar-link"}) do %>
    			    <span class="glyphicon glyphicon-share" aria-hidden="true"></span> logout
    			  <% end %>
      		</div>
      	<% else %>
    		  <div class ="navbar-text navbar-right">
    		    <%= link_to('About', root_path, {class: "navbar-link glyphicon glyphicon-home"}) %>
    			  <%= link_to(root_path, {class: "navbar-link"}) do %>
    			    <span class="glyphicon glyphicon-link" aria-hidden="true"></span> 商品一覧
    			  <% end %>
    			  <%= link_to(new_admin_registration_path, {class: "navbar-link"}) do %>
    			    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> 新規登録
    			  <% end %>
    			  <%= link_to(new_admin_session_path, {class: "navbar-link"}) do %>
    			    <span class="glyphicon glyphicon-share" aria-hidden="true"></span> ログイン
    			  <% end %>
    			</div>
    		<% end %>
      </div>
    </nav>



  <div class="container">
    <%= yield %>
  </div>


      <footer>

      </footer>

  </body>
</html>