<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>注文履歴一覧</h2>
      <table class="table">
      	<thead>
      		<tr class = "active">
      			<th>購入日時</th>
      			<th>購入者</th>
      			<th>注文個数</th>
      			<th>注文ステータス</th>
      		</tr>
      	</thead>
      	<% @orders.each do |order| %>
        	<tbody>
        		<tr>
        		  <td>
        		    <%= link_to edit_admin_order_path(order) do %>
          			  <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          			<% end %>
        		  </td>
        			<td><%= order.customer.last_name + order.customer.first_name %></td>
        			<td>
        			  <% sum = 0 %>
        			  <% order.order_details.each do |order_detail| %>
          			  <% sum += (order_detail.amount) %>
          			<% end %>
          			<%= sum %>
        			</td>
        			<td>未実装</td>
        	</tbody>
      	<% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>