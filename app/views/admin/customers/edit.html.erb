<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2> <%= @customer.last_name + @customer.first_name %> さんの会員情報編集</h2>
      <br>
      <%= form_with model:@customer, url: admin_customer_path, local:true do |f| %>
        <table class="table">
        	<tbody>
        	  <tr>
        			<td>会員ID</td>
        			<td><%= @customer.id %></td>
        			<td></td>
        		</tr>
        		<tr>
        			<td>氏名</td>
        			<td><%= f.text_field :last_name, autofocus: true %></td>
        			<td><%= f.text_field :first_name %></td>
        		</tr>
        		<tr>
        			<td>フリガナ</td>
        			<td><%= f.text_field :last_name_kana %></td>
        			<td><%= f.text_field :first_name_kana %></td>
        		</tr>
        		<tr>
        			<td>郵便番号</td>
        			<td><%= f.text_field :postal_code %></td>
        			<td></td>
        		</tr>
        		<tr>
        			<td>住所</td>
        			<td><%= f.text_field :address %></td>
        			<td></td>
        		</tr>
        		<tr>
        			<td>電話番号</td>
        			<td><%= f.text_field :telephone_number %></td>
        			<td></td>
        		</tr>
        		<tr>
        			<td>メールアドレス</td>
        			<td><%= f.email_field :email, class: "new_inform" %></td>
        			<td></td>
        		</tr>
        		<tr>
        		  <td>会員ステータス</td>
        		  <td>
        		    <%= f.radio_button :is_deleted, :false %>有効
        		    <%= f.radio_button :is_deleted, :true %>退会
        		  </td>
        		  <td></td>
        		  <td></td>
        		</tr>
        	</tbody>
        </table>
        <%= f.submit "変更を保存" %>
      <% end %>
