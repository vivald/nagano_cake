<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <h2>ジャンル一覧・追加</h2>
      <%= form_with url: admin_genres_path, local:true do |f| %>

        <p>
          <span>ジャンル名</span>
          <span><%= f.text_field :name %></span>
          <%= f.submit "新規登録" %>
        </p>
      <% end %>
      <table class="table">
      	<thead>
      		<tr>
      			<th class="active">ジャンル</th>
      		</tr>
      	</thead>
      	<% @genres.each do |genre| %>
        	<tbody>
        		<tr>
        			<th><%= genre.name %></th>
        			<td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
        		</tr>
        	</tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>